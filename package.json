{
  "name": "alcalzone-shared",
  "version": "4.0.1",
  "description": "A set of utilities shared between my projects",
  "keywords": [],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/shared-utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/shared-utils.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/shared-utils/issues"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~3.4.1",
    "@alcalzone/release-script-plugin-license": "~3.4.1",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/debug": "4.1.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.6",
    "@types/yargs": "^17.0.7",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.1.2",
    "coveralls": "^3.1.1",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.0",
    "rimraf": "^3.0.0",
    "semver": "^7.3.5",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.22.10",
    "typescript": "^4.4.4",
    "yargs": "^17.3.0"
  },
  "dependencies": {
    "debug": "^4.3.3"
  },
  "scripts": {
    "build": "tsc -p src/tsconfig.build.json",
    "docs": "node node_modules/typedoc/bin/typedoc --options ./typedoc.js src/index.ts",
    "prebuild": "rimraf ./build",
    "watch": "npm run build -- --watch",
    "test:ts": "mocha src/**/*.test.ts",
    "test": "npm run test:ts",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls -v",
    "show-coverage": "npm run coverage && start ./coverage/index.html",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "release": "release-script"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "build/**",
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readme": "README.md"
}
