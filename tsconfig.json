{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": false,
        "noEmit": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        // "noImplicitAny": true,
        "outDir": "build/",
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "inlineSourceMap": false,
        "stripInternal": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "target": "es2015",
        "lib": ["ES2015"],
        "newLine": "lf",
        "watch": false // true breaks circleci
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "build/**",
        "node_modules/**"
    ]
}
